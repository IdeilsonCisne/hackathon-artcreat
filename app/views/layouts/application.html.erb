<!DOCTYPE html>
<html>
  <head>
    <title>ART CREACE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-sucess"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <%= link_to "Logo", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav justify-content-center">
            <li class="nav-item">
              <%= link_to "Contratantes", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ART", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Certidões", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Protocolos", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Financeiro", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Ferramentas", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Nome", "#", class: "nav-link" %>
            </li>
          </ul>
        </div>
        <div class="perfil"></div>
      </div>
    </nav>

    <div class="container">
      <div class="progress mt-3">
        <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <%= yield %>
    </div>

    <ul hidden>
      <li>
        <% if user_signed_in? %>
          Você está logado como: <strong><%= current_user.email %></strong>.
          <%= link_to "Editar perfil", edit_user_registration_path %> |
          <%= link_to "Sair", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Registrar-se", new_user_registration_path %> |
          <%= link_to "Login", new_user_session_path %>
        <% end %>
      </li>
    </ul> 
  </body>
</html>
